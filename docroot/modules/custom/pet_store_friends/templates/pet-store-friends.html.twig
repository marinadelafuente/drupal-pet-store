{#[pet-store-friends}/templates/pet-store-friends.html.twig #}

<div class="block__container">
<img class="block__img" src="{{ img }}"/>
<div class="block__info">
  <div>
    <h1 class="block__title">{{ title }}</h1>
    <p class="block__description">{{ description }}</p>
  </div>
  <div class="block__post">
    {% for post in posts %}
      <h3 class="block__post__title">{{ post.title }}</h3>
      <p class="block__post__body">{{ post.body }}</p>
    {% endfor %}
  </div>

  <div class="ps-button">
    <a href="{{ link }}">More posts</a>
  </div>
</div>
</div>
